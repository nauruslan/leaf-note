# Указывает, что это корневой .editorconfig
root = true

# ---------------------------------------------------------
# БАЗОВЫЕ НАСТРОЙКИ ДЛЯ ВСЕХ ФАЙЛОВ
# ---------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ---------------------------------------------------------
# JAVASCRIPT / JSON / YAML
# ---------------------------------------------------------
[*.{js,mjs,cjs,json,yml,yaml}]
indent_size = 2

# ---------------------------------------------------------
# CSS / HTML / BLADE
# ---------------------------------------------------------
[*.{css,html,blade.php}]
indent_size = 4

# ---------------------------------------------------------
# MARKDOWN
# ---------------------------------------------------------
[*.md]
trim_trailing_whitespace = false

